# Required API Keys
OPENAI_API_KEY=
GITHUB_TOKEN=
ANTHROPIC_API_KEY=


DECISION_MODEL=claude-sonnet-4-20250514
CRITIC_MODEL=claude-sonnet-4-20250514
OPTIMISER_MODEL=claude-sonnet-4-20250514
RISK_MODEL=claude-sonnet-4-20250514

DECISION_MODEL_TEMPERATURE=0.0
OPTIMISER_MODEL_TEMPERATURE=0.0
CRITIC_MODEL_TEMPERATURE=0.0
RISK_MODEL_TEMPERATURE=0.0

DECISION_MODEL_TOKEN=4096
OPTIMISER_MODEL_TOKEN=4096
CRITIC_MODEL_TOKEN=4096
RISK_MODEL_TOKEN=4096

CRITIC_DEFAULT_QUALITY_SCORE=7
CRITIC_REGRESSION_PENALTY=0.05
CRITIC_UNRESOLVED_PENALTY=0.02

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pipeline_db
DB_USER=pipeline_user
DB_PASS=pipeline_pass
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Application Configuration
API_HOST=0.0.0.0
API_PORT=8091
LOG_LEVEL=INFO
# LOG_FILE=/var/log/pipeline-optimizer/app.log

# Git Configuration
GIT_CLONE_DEPTH=1
GIT_TIMEOUT=300

# LLM Configuration
LLM_MAX_RETRIES=3
LLM_TIMEOUT=60

# Workflow Configuration
MAX_PLAN_TOOLS=10
ENABLE_PARALLEL_EXECUTION=false

# SSL for local to github connection
REQUESTS_CA_BUNDLE=/opt/homebrew/etc/ca-certificates/cert.pem
SSL_CERT_FILE=/opt/homebrew/etc/ca-certificates/cert.pem

IS_LOCAL=true
